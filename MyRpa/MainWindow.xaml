<Window x:Class="MyRpa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRpa"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="MyRpa - 自动化流程工具" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航工具栏 -->
        <Grid Grid.Row="0" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnBack" Content="后退" Width="50" Margin="5" Click="btnBack_Click"/>
            <DockPanel Grid.Column="1">
                <TextBlock Text="网址：" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="txtUrl" VerticalAlignment="Center" KeyDown="txtUrl_KeyDown"/>
            </DockPanel>
            <Button x:Name="btnGo" Grid.Column="2" Content="转到" Width="50" Margin="5" Click="btnGo_Click"/>
        </Grid>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- 浏览器区域 -->
            <cefSharp:ChromiumWebBrowser x:Name="Browser" Grid.Column="0" Address="https://www.baidu.com" />
            
            <!-- 分隔条 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- 工作台区域 -->
            <ContentControl x:Name="workbenchContainer" Grid.Column="2" />
        </Grid>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="就绪" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
